{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/backend",
  "projects": {
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "ms-notifications": {
      "type": "application",
      "root": "apps/ms-notifications",
      "entryFile": "main",
      "sourceRoot": "apps/ms-notifications/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-notifications/tsconfig.app.json"
      }
    },
    "ms-product": {
      "type": "application",
      "root": "apps/ms-product",
      "entryFile": "main",
      "sourceRoot": "apps/ms-product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-product/tsconfig.app.json"
      }
    },
    "ms-store": {
      "type": "application",
      "root": "apps/ms-store",
      "entryFile": "main",
      "sourceRoot": "apps/ms-store/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-store/tsconfig.app.json"
      }
    },
    "ms-user": {
      "type": "application",
      "root": "apps/ms-user",
      "entryFile": "main",
      "sourceRoot": "apps/ms-user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ms-user/tsconfig.app.json"
      }
    },
    "prisma": {
      "type": "library",
      "root": "libs/prisma",
      "entryFile": "index",
      "sourceRoot": "libs/prisma/src",
      "compilerOptions": {
        "tsConfigPath": "libs/prisma/tsconfig.lib.json"
      }
    }
  }
}